#include <iostream>
#include <vector>
using namespace std;

int main() {
    vector<int> v;
    int n, x;

    cout << "Enter the size of numbers: ";
    cin >> n;

    for (int i = 0; i < n; i++) {
        cin>>x;
        v.push_back(x);
    }

    for (int i=0; i < n; i++) {
        if (v[i] % 2 == 0) {
            cout<<v[i] / 2<<" ";
        }else {
            cout<< v[i] * 2<<" ";
        }

    }

    return 0;
}
